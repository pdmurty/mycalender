<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Spinner
        android:id="@+id/countries"
        style="@style/Widget.AppCompat.Spinner.DropDown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        app:layout_constraintEnd_toStartOf="@+id/admins"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"
         />

    <Spinner
        android:id="@+id/admins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:prompt="@string/app_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/countries"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"/>


    <EditText
        android:id="@+id/searchtxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/countries"
        android:hint="search city"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="text"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/searchButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/countries" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/admins"
        android:onClick="UpdateGeonames"
        android:text="Find"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/admins" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylerVW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchtxt" />
</androidx.constraintlayout.widget.ConstraintLayout>
