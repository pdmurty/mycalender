<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mycalender">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ShowEvents"></activity>
        <activity
            android:name=".TabDemo"
            android:label="@string/title_activity_tab_demo"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".Geomaps" />

        <service
            android:name=".FetchAdressIntentService"
            android:exported="false" />

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CalcEphemeris"
            android:label="Ephemeris"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Geolocations"
            android:label="Selet Location"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateHidden" />

        <receiver
            android:name=".AlaramReciever"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MainActivity"
            android:foregroundServiceType="location">

            <!-- Any inner elements would go here. -->
        </service>
    </application>

</manifest>